
<div class="container">
  <hr><h3 class="text-center"> All Products</h3><hr>
  <div class="row">
    <div class="col-lg-12">
      <div class="table-responsive table-center">
          <table class="table table-bordered table-hover table-striped">
              <thead>

                <tr>
                  <th><%= "Date Added" %></th>
                  <th><%= "Product Name" %></th>
                  <th><%= "Total Donated" %></th>
                  <th><%= "Product Id" %></th>
                </tr>

              </thead>
              <tbody>
                <% @products.each do |product| %>
                  <tr>
                      <td><%= (product.created_at).strftime("%b %d, %Y")  %> </td>
                      <td><%= link_to "#{product.name}", product_path(product) %>
                      </td>
                      <td>$<%= product.total_donated_amount %> </td>
                      <td><%= product.id %> </td>

                  </tr>
                <% end %>
              </tbody>
          </table>
      </div>
      <!-- /.table-responsive -->
      </div>
  </div>
</div>