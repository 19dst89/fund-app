<div class="container">
  <br>
  <h3 class="text-center">Welcome to your Dashboard, <%= current_user.first_name %></h3>
  <br>
  <br>

  <div class="container">
    <%= button_to "Add Customer", new_charge_path, :method => "get", class: "btn btn-primary" %>
    <br>
    <div class="col-sm-6">
      <div class="row">
        <div class="col-sm-12">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title text-center">Total Donations</h3>
            </div>
            <div class="panel-body text-center">
              <h4>$<%= @product.total_donated_amount %></h4>
            </div>
          </div>
        </div>
        <div class="col-sm-12">
          <div class="panel panel-success">
            <div class="panel-heading">
              <h3 class="panel-title text-center">Minimum Price</h3>
            </div>
            <div class="panel-body text-center">
              <h4>$<%= @product.min_price %></h4>
            </div>
          </div>
        </div>
      </div>
    </div>



    <div class="col-sm-6">
      <div class="row">
        <div class="col-sm-12">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title text-center">Total Donors</h3>
            </div>
            <div class="panel-body text-center">
              <h4><%= @charges.length %></h4>
            </div>
          </div>
        </div>
        <div class="col-sm-12">
          <div class="panel panel-success">
            <div class="panel-heading">
              <h3 class="panel-title text-center">Inventory</h3>
            </div>
            <div class="panel-body text-center">
              <h4><%= @product.inventory_amount %></h4>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
</div>
</div>
<br>

  <!-- LIST OF DONORS -->

  <div class="container">
    <hr><h3 class="text-center"> Recent Donations</h3><hr>
    <div class="row">
      <div class="col-lg-12">
        <div class="table-responsive table-center">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Customer</th>
                        <th>Donation Amount</th>
                        <th>Product id</th>
                    </tr>
                </thead>
                <tbody>
                  <% @charges.each do |charge| %>
                    <tr>
                        <td><%= (charge.created_at).strftime("%b %d, %Y")  %> </td>
                        <td><%= charge.customer_name.titleize %> </td>
                        <td>$<%= charge.amount %> </td>
                        <% if charge.product_id == nil %>
                          <td> n/a </td>
                        <% else %>
                          <td><%= charge.product_id %> </td>
                        <% end %>

                    </tr>
                  <% end %>
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
        </div>
    </div>
  </div>
</div>